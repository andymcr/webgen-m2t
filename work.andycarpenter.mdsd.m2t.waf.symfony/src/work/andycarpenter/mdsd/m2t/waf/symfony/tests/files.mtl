[comment encoding = UTF-8 /]
[module files(
	'http://www.eclipse.org/emf/2002/Ecore',
	'http://andycarpenter.work/metamodel/WebApplicationFramework')]
[import work::andycarpenter::mdsd::m2t::waf::symfony::files/]
[import work::andycarpenter::mdsd::m2t::orm::doctrine::tests::files/]
[import work::andycarpenter::mdsd::m2t::orm::doctrine::tests::names/]
[import work::andycarpenter::mdsd::m2t::waf::symfony::tests::names/]


[query private applicationDirectory(eObject : EObject) : String
	= 'Application'
/]


[query public testApplicationsDirectory(controller : Controller) : String
	= controller.testsDirectory().concat('/').concat(controller.applicationDirectory())
/]

[query public testControllersDirectory(controller : Controller) : String
	= controller.testsDirectory().concat('/').concat(controller.controllerDirectory())
/]


[query public testApplicationNamespace(controller : Controller) : String
	= controller.testsNamespace().concat('\\').concat(controller.applicationDirectory())
/]

[query public testControllersNamespace(controller : Controller) : String
	= controller.testsNamespace().concat('\\').concat(controller.controllerDirectory())
/]


[query public testApplicationFilename(model : WafModel) : String
	= model.testApplicationsDirectory()
			.concat('/')
			.concat(model.testApplicationClassName())
			.concat(model.executableExtension())
/]

[query public testControllerFilename(controller : Controller, model : WafModel) : String
	= controller.testControllersDirectory()
			.concat('/')
			.concat(controller.testControllerClassName())
			.concat(controller.executableExtension())
/]
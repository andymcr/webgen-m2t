[template private findActualParameterList(unit : DynamicUnit, parameters : Sequence(Attribute)) post(trim())]
[for (key : Attribute | parameters) separator (', ')]
[unit.findActualParameter(key, parameters)/][/for]
[/template]

[template private findActualParameter(unit : DynamicUnit, key : Attribute, parameters : Sequence(Attribute)) post(trim())]
[let parameterName : String = key.routeParameterName(parameters)]
[if (unit.hasRouteActual(key))]
[unit.routeActual(key).value.controllerExpression('$'.concat(unit.instanceName()))/]
[elseif (key.encodeUriKey)]
urldecode($[parameterName/])
[else]
$[parameterName/]
[/if]
[/let]
[/template]


[template public redirect(page : Page) post(trim())]
$this->redirectToRoute('[page.routeName()/]'[if (page.routeParameters()->notEmpty())]
, array(
    [page.routeActualParameters()/]
)[/if])
[/template]

[template public redirectCreate(unit : EditUnit, routeName : String, sourceParameters : Sequence(Attribute)) post(trim())]
[unit.redirect(routeName, unit.routeCreateParameters(), sourceParameters)/]
[/template]

[template public redirect(action : Action, routeName : String, sourceParameters : Sequence(Attribute)) post(trim())]
[action.parentUnit.redirect(routeName, action.parentUnit.routeParameters(), sourceParameters)/]
[/template]

[template private redirect(unit : DynamicUnit, routeName : String, routeParameters : Sequence(Attribute), sourceParameters : Sequence(Attribute)) post(trim())]
[let page : Page = unit.displayedOn]
$this->redirectToRoute('[routeName/]'[if (page.hasFilters or page.hasPagination)]
, [if (routeParameters->notEmpty())]
array_merge(
    $request->query->all(),
    array(
        [unit.routeActualParameters(routeParameters, sourceParameters)/]
))[else]
$request->query->all()[/if]
[else]
	[if (routeParameters->notEmpty())]
, array(
    [unit.routeActualParameters(routeParameters, sourceParameters)/]
)[/if]
[/if])
[/let]
[/template]


[template private routeActualParameters(page : Page) post(trim())]
[for (key : Attribute | page.routeParameters())]
'[key.routeParameterName(page.routeParameters())/]' => $x[comment key.routeParameterName(valueBase)/],
[/for]

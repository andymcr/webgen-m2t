		endif
/]

[query private containerAssociatins(entity : Entity) : Sequence(Association)
	= if not entity.isContained then
			Sequence{}
		else
			Sequence{entity.containingAssociation}
				->union(entity.containingType.containerAssociatins())
		endif
/]

[query private joinAssociatins(selection : Selection) : OrderedSet(Association)
	= selection.joins
		->select(j | selection.selectPath.selectPathAssociatins()->excludes(j))
		->select(j | selection.containerAssociatins()->excludes(j))
/]

[template private condition(selection : Selection) post(trim())]
[if (selection.uriPathKeys()->notEmpty())]
[let routingEntity : Entity = selection.selectionType()]
	[if (selection.uriPathKeys()->size() = 1)]
	[let key : Attribute = selection.uriPathKeys()->first()]
->where($queryBuilder->expr()->eq('[key.partOf.selectName()/].[key.modelPropertyName()/]', ':[key.routeParameterName(routingEntity)/]'))
	[/let]
	[else]
->where($queryBuilder->expr()->andX(
		[for (key : Attribute | selection.uriPathKeys())]
    $queryBuilder->expr()->eq('[key.partOf.selectName()/].[key.modelPropertyName()/]', ':[key.routeParameterName(routingEntity)/]')[if (i <> selection.uriPathKeys()->size())],[/if]
		[/for]
))
	[/if]
[/let]
[/if]
[if (selection.hasCondition())]
->[if (selection.hasSelectPath())]andWhere[else]where[/if]([selection.condition.queryExpression()/])
[/if]
[/template]

[template private orderBy(selection : Selection) post(trim())]
->orderBy([selection.ordering->first().attribute.queryExpression()/], [selection.ordering->first().order()/])
[if (selection.ordering->size() > 1)]
	[for (order : Order | selection.ordering->subOrderedSet(2, selection.ordering->size()))]
->addOrderBy([order.attribute.queryExpression()/], [order.order()/])
	[/for]
[/if]
[/template]

[template private setParametersCode(selection : Selection, security : SecurityModel) post(trim())]
[/template]
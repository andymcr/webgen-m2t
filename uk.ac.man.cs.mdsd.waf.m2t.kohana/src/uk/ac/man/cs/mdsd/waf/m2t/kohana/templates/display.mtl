[template public trimValue(field : UnitField, value : String) post(trim())]
if (strlen([value/]) > [field.maximumDisplaySize/])
    echo substr([value/], 0, [field.maximumDisplaySize/] - 3) . '...';
else
    echo [value/];
[/template]



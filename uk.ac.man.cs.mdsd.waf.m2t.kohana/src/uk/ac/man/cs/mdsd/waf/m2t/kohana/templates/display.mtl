    [feature.trimValue(feature.getValue(accessor))/]
	[else]
    echo HTML::chars([feature.getValue(accessor)/]);
	[/if]
?>
[else]
    [feature.actions->first().actionLink(accessor.substring(1, accessor.lastIndex('->') - 1), feature.getValue(accessor))/]

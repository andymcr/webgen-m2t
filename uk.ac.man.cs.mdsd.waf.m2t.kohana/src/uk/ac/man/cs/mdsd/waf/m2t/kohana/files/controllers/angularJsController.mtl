[module angularJsController(
	'http://www.cs.man.ac.uk/mdsd/2015/WebApplicationFramework')]
[import uk::ac::man::cs::mdsd::web::m2t::core::common::featureProperties/]
[import uk::ac::man::cs::mdsd::web::m2t::core::files/]
[import uk::ac::man::cs::mdsd::waf::m2t::kohana::common::names/]
[import uk::ac::man::cs::mdsd::waf::m2t::kohana::common::fileInformation/]
[import uk::ac::man::cs::mdsd::waf::m2t::kohana::files::controllers::commonMethods/]
[import uk::ac::man::cs::mdsd::waf::m2t::kohana::files::controllers::controlMethods/]


[template public generateAngularJsControllers(model : WafModel)]
[file(model.jsDirectory().concat('/controllers').concat(model.javascriptExtension()), false)]
var [model.siteName/] = angular.module('[model.siteName/]', ['['/][']'/]);

[model.pages.formUnits().generateJsController()/]
[/file]
[/template]


[template public generateJsController(unit : DynamicUnit)]
[unit.pageDisplayedOn().partOf.siteName/].controller('[unit.uniqueName()/]', function ($scope, $http) {
[for (association : UnitAssociation | unit.inputAssociations())]
$http.get('<?php
	echo Route::get('[association.displayedOn.pageDisplayedOn().controllerName()/]')->uri(array(
		'action' => '[association.optionsName()/]',
	));
?>').success(function(data) {
    $scope.[association.optionsName()/] = data;
  });

[/for]
});

[/template]